# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
indent_size = 4
max_line_length = 110

[*.{yml,yaml,toml,json,jsonc,json5,hjson,ini}]
indent_size = 2

[*.md]
indent_size = 2

[*.{js,css}]
indent_size = 2
